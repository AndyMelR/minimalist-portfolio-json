---
import {basics} from '@cv'
import Section from '@/components/Section.astro'

const {name, label, image, location, profiles, phone, email} = basics
const {city, region} = location
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{ name }</h1>
            <h3>{ label }</h3>
            <span>
                {city}, {region}
            </span>
            <footer>
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title={`Send email to ${name} to ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                        
                            </a>
                    )
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} style="height: 100px; width:100px" />
        </figure>

    </div>
</Section>
